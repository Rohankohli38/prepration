pipeline
{
   agent any
   
   stages
   {
       stage('Build')
       {
           steps 
           {
            echo 'Building the project'
           }
        }
      
       stage('Test')
       {
           steps 
           {
            echo 'Testing the application'
           }
        }
    
       stage('Deploy')
       {
           steps 
           {
            echo 'Deploying the application'
           }
        }
    }
    }
